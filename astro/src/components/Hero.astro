<style>
	/* Triangle animation: slide in from left, fade in, and rotate into position */
	.triangle-animate {
		animation: triangleSlide 1.2s ease-out forwards;
		opacity: 0;
		transform: translateX(-100px) rotate(-25deg);
	}

	@keyframes triangleSlide {
		0% {
			opacity: 0;
			transform: translateX(-100px) rotate(-360deg);
		}
		100% {
			opacity: 1;
			transform: translateX(0) rotate(0deg);
		}
	}

	/* Letter-by-letter animation for text */
	.letter-by-letter {
		display: inline-block;
	}

	/* Divider line grow animation */
	.divider-grow {
		width: 0;
		animation: growWidth 0.8s ease-out forwards;
		animation-delay: 1.5s; /* Start after text finishes */
	}

	@keyframes growWidth {
		from {
			width: 0;
		}
		to {
			width: 300px; /* w-75 equivalent */
		}
	}
</style>

<script>
	// Letter-by-letter animation
	document.addEventListener('DOMContentLoaded', () => {
		const textElement = document.querySelector('.letter-by-letter');
		if (textElement) {
			const text = textElement.textContent || '';
			textElement.textContent = '';
			
			// Split text into individual characters and wrap each in a span
			text.split('').forEach((char, index) => {
				const span = document.createElement('span');
				span.textContent = char;
				span.style.opacity = '0';
				span.style.display = 'inline-block';
				// Preserve space characters
				if (char === ' ') {
					span.style.width = '0.25em';
				}
				span.style.animation = `fadeInLetter 0.1s ease-in forwards`;
				span.style.animationDelay = `${index * 0.03}s`; // 50ms delay between each letter
				textElement.appendChild(span);
			});
		}
	});
</script>

<style>
	@keyframes fadeInLetter {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>